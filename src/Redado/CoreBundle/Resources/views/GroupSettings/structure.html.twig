{% extends "RedadoCoreBundle::layout.html.twig" %}

{% block left_column %}
    <ul class="nav nav-pills nav-stacked">
        <li><a href="{{ path('group_settings_general', {'id': group.id }) }}">General</a></li>
        <li><a href="{{ path('group_settings_permissions', { 'id': group.id }) }}">Permissions</a></li>
        <li><a href="#">Links with other groups</a></li>
        <li><a href="#">Extensions</a></li>
    </ul>
{% endblock %}

{% block content %}
    <ul class="breadcrumb">
        <li><a href="{{ path('group_show', {'id': group.id}) }}">{{ group.name}} ({{ group.sysname}})</a> <span class="divider">/</span></li>
        <li><a href="{{ path('group_settings_general', {'id': group.id}) }}">{% trans %}Settings{% endtrans %}</a> <span class="divider">/</span></li>
        <li class="active">{% trans %}Links with other groups{% endtrans %}</li>
    </ul>
    {{ form_start(form_parent, { 'action': '#', 'attr' : { 'class': 'form form-inline'} }) }}
	<table class="table table-bordered table-striped">
                <thead>
			<tr>
				<th>{% trans %}Parents{% endtrans %}</th>
                <th>{% trans %}Inherhit members{% endtrans %}</th>
                <th>{% trans %}Remove or add{% endtrans %}</th>
			</tr>
		</thead>
		<tbody>
		{% for closure in group.closuresParents %}
			<tr>
				<td>
					<a href="{{ path('group_show', { id : closure.parent.id }) }}">{{ closure.parent.name }}</a> <span class="muted">({{ closure.parent.sysname }})</span>
				</td>
                <td>
                    {% if closure.inheritMembers == true %}
                        {% trans %}Yes{% endtrans %}
                    {% else %}
                        {% trans %}No{% endtrans %}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('group_removeparent', { id: group.id, parent_id: closure.parent.id }) }}"
                    class="btn">
                        Remove
                    </a>
                </td>
			</tr>
		{% endfor %}
            <tr>
                <td>
                    {{ form_widget(form_parent.parent, { 'attr' : {'placeholder' : 'New parent' } } ) }}
                </td>
                <td>
                    {{ form_widget(form_parent.inherit_members) }}
                </td>
                <td>
                    <button type="submit" class="btn">{% trans %}Add{% endtrans %}</button>
                </td>
            </tr>
		</tbody>
	</table>
    {{ form_errors(form_parent) }}
    {{ form_end(form_parent) }}

    {{ form_start(form_child, { 'action': '#', 'attr' : { 'class': 'form form-inline' } }) }}
	<table class="table table-bordered table-striped">
                <thead>
			<tr>
				<th>{% trans %}Children{% endtrans %}</th>
                <th>{% trans %}Inherhit members{% endtrans %}</th>
                <th>{% trans %}Remove or add{% endtrans %}</th>
			</tr>
		</thead>
		<tbody>
		{% for closure in group.closuresChildren %}
			<tr>
				<td>
					<a href="{{ path('group_show', { id : closure.child.id }) }}">{{ closure.child.name }}</a> <span class="muted">({{ closure.child.sysname }})</span>
				</td>
                <td>
                    {% if closure.inheritMembers == true %}
                        {% trans %}Yes{% endtrans %}
                    {% else %}
                        {% trans %}No{% endtrans %}
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('group_removechild', { id: group.id, child_id: closure.child.id }) }}"
                    class="btn">
                        Remove
                    </a>
                </td>
			</tr>
		{% endfor %}
            <tr>
                <td>
                    {{ form_widget(form_child.child, { 'attr' : {'placeholder' : 'New child' } } ) }}
                </td>
                <td>
                    {{ form_widget(form_child.inherit_members ) }}
                </td>
                <td>
                    <button type="submit" class="btn">{% trans %}Add{% endtrans %}</button>
                </td>
            </tr>
		</tbody>
	</table>
    {{ form_end(form_child) }}
{% endblock %}
