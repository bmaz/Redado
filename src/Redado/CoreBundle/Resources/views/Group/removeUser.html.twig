{% extends 'RedadoCoreBundle::layout.html.twig' %}

{% set user_name_link = "<a href=\"#{ path('user_show', { 'id': user.id }) }\">#{ user.name }</a>" %}
{% set group_name_link = "<a href=\"#{ path('group_show', { 'id': group.sysname }) }\">#{ group.name }</a>" %}

{% block h1 %}
{% trans %}Remove %user_name_link% ?{% endtrans %}
{% endblock %}

{% block content %}
    <p>
    {% trans %}
        Do you really want to remove %user_name_link% from %group_name_link% group ?
    {% endtrans %}
    </p>
        {{ form_start(form) }}
            <a href="{{ path('group_show', { 'id': group.sysname }) }}" class="btn">
            {% trans %}
                Back
            {% endtrans %}
            </a>

            <input type="submit"
            value="{% trans %}Remove{% endtrans %}"
            class="btn btn-danger">

        {{ form_end(form) }}
{% endblock %}
