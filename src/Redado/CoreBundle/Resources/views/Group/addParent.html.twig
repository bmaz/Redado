{% extends "RedadoCoreBundle::layout.html.twig" %}

{% set group_name_link = "<a href=\"#{ path('group_show', { 'id': group.sysname }) }\">#{ group.name }</a>" %}

{% block h1 %}
{% trans %}Add parent group to group %group_name_link%{% endtrans %}
{% endblock %}

{% block content %}
        {{ form_start(form) }}
<fieldset>
    <div>
        <label for="form_user_email">Group name :</label>
        {% set title %}
            {% trans %}Please enter group name.{% endtrans %}
        {% endset %}
        {{ form_widget(form.user_email, { 'attr': { 'title' : title } }) }}
    </div>
        {{ form_widget(form.Save, { 'attr' : { 'class': 'btn btn-primary'} }) }}
</fieldset>
        {{ form_end(form) }}
{% endblock %}
