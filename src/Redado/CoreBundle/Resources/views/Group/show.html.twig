{% extends "RedadoCoreBundle::layout.html.twig" %}


{% block left_column %}
    <h4>{{ group.name }}
        {% if is_granted('admin', group) %}
        <a href="{{ path('group_settings_general', {'id': group.sysname})}}" class="btn btn-mini">
            <i class="icon-wrench"></i> {% trans %}Settings{% endtrans %}
        </a>
        {% endif %}
    </h4>
    <span class="muted" id="help_sysname" data-placement="right"
    title="{% trans %}This is the short system name of the group, unique in the application.{% endtrans %}"
    >{{ group.sysname }}</span><br/>
    <script type="text/javascript">$('#help_sysname').tooltip();</script>
    {{ group.description|nl2br }}<br/>
    <strong>{% trans %}Creation date :{% endtrans %}</strong> {{ group.created|localizeddate('full', 'short') }}
    <div class="row-fluid">
        <div class="span12">
            {% if group.parents | length %}
                <h5>{% trans %}Parent groups :{% endtrans %}</h5>
                <ul class="unstyled">
                    {% for parent in group.parents %}
                        <li>
                        <a href="{{ path('group_show', { 'id' : parent.sysname } ) }}">{{ parent.name }}</a><span class="muted"> ({{ parent.sysname}})</span>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block left_content %}
	<table class="table table-hover table-bordered">
        <thead>
			<tr>
				<th>
                {% trans %}Members{% endtrans %}
                </th>
			</tr>
		</thead>
		<tbody>
		{% for membership in group.memberships %}
			<tr>
				<td>
					<a href="{{ path('user_show', { id : membership.user.id }) }}">{{ membership.user.name }}</a>
                </td>
			</tr>
		{% endfor %}
        {% if is_granted('admin', group) %}
        <tr>
            <td>
                <a href="{{ path('group_add_user', { 'id' : group.sysname }) }}" class="btn btn-small">
                    {% trans %}Add{% endtrans %} <i class="icon-plus"></i>
                <a>
                <a href="{{ path('group_settings_users', {'id': group.sysname}) }}" class="btn btn-small">
                    {% trans %}Manage{% endtrans %}
                </a>
            </td>
        </tr>
        {% endif %}
		</tbody>
	</table>
{% endblock %}

{% block right_content %}
<div class="row-fluid">
    <div class="span12">
    <table class="table table-bordered">
    <thead><tr><th>
            {% trans %}Sub-groups :{% endtrans %}
    </th></tr></thead>
    <tbody><tr><td>
        <ul class="unstyled">
            {% for child in group.children %}
            {% set rand = random() %}
                <li>
                    <span class="pull-left"{% if child.children | length > 0 %} data-toggle="collapse" style="cursor:pointer;width:15px;"{% endif %} id="achild{{ child.id }}{{ rand }}" data-target="#child{{ child.id }}{{ rand }}">
                        <i class="icon-chevron-right{% if child.children | length == 0 %} icon-white{% endif %}"></i>
                    </span>
                    <a href="{{ path('group_show', { 'id' : child.sysname })}}">{{ child.name }}</a>
                    <span class="muted">({{ child.sysname }})</span>
                    <ul id="child{{ child.id }}{{ rand }}" class="collapse">
                    <br/>
                    </ul>
                    <script type="text/javascript">
                        $("#child{{ child.id }}{{ rand }}").on('show', function () {
                            if( !$("#child{{ child.id }}{{ rand }}").hasClass('loaded') ) {
                                $.ajax({
                                    url: "{{ path('ajax_get_group_children', {'id': child.id }) }}",
                                    type: "get",
                                    dataType: "html",
                                    success: function(data) {
                                        $("#child{{ child.id }}{{ rand }}").html(data);
                                        $("#child{{ child.id }}{{ rand }}").addClass('loaded');
                                    }
                                });
                            }
                        });
                        $("#child{{ child.id }}{{ rand }}").on('shown', function () {
                            $("#achild{{ child.id }}{{ rand }}").html('<i class="icon-chevron-down"></i>');
                        });
                        $("#child{{ child.id }}{{ rand }}").on('hidden', function () {
                            $("#achild{{ child.id }}{{ rand }}").html('<i class="icon-chevron-right"></i>');
                        });
                    </script>
                </li>
            {% else %}
            {% endfor %}
        </ul>
        {% if is_granted('admin', group) %}
        <a href="{{ path('group_new', {'parent_id' : group.sysname }) }}" class="btn btn-small">
            {% trans %}Add{% endtrans %} <i class="icon-plus"></i>
        </a>
        <a href="{{ path('group_settings_structure', {'id': group.sysname}) }}" class="btn btn-small">
             {% trans %}Manage{% endtrans %}
        </a>
        {% endif %}
        </td></tr></tbody></table>
    </div>
</div>
<div class="row-fluid" style="margin-top:5px;">
    <table class="table table-hover table-bordered">
        <thead>
            <tr><th>{% trans %}Admins :{% endtrans %}</th></tr>
        </thead>
        <tbody>
            {% for admin in group.admins %}
                <tr><td>{{ admin.name }}</li>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="row-fluid" style="margin-top:5px;">
    <div class="alert alert-info">
        <b>Help</b>
    </div>
</div>
{% endblock %}


{% block toolbar %}
	{% if is_granted('edit_users', group) %}
          <a href="{{ path('group_adduser', { 'id': group.sysname }) }}" class="btn btn-primary">
            <i class="icon-plus icon-white"></i>
            {% trans %}Add user{% endtrans %}
          </a>
	{% endif %}
    {% if is_granted('admin', group) %}
        <a href="{{ path('group_editpermission', { 'id': group.sysname }) }}" class="btn">
            {% trans %}Admin rights{% endtrans %}
        </a>
    {% endif %}
{% endblock %}
