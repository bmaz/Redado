<a href="#deleteModal" role="button" class="btn btn-danger" data-toggle="modal">Delete</a>

{% set user_name_link = "<a href=\"#{ path('user_show', { 'id': user.id }) }\">#{ user.name }</a>" %}

<div id="deleteModal" class="modal hide fade" role="dialog">
    <div class="modal-header">
    <h1>
        {% trans %}
            Delete %user_name_link%'s account ?
        {% endtrans %}
    </h1>
    </div>

    <div class="modal-body">
        {% set user_name = user.name %}

        <p>
        {% trans %}
            Do you really want to delete %user_name%'s account ?
        {% endtrans %}
        </p>

    </div>

    <div class="modal-footer">

        {{ form_start(form) }}
            <button class="btn" data-dismiss="modal">
            {% trans %}
                Close
            {% endtrans %}
            </button>

            <input type="submit"
            value="{% trans %}Delete{% endtrans %}"
            class="btn btn-danger">

        {{ form_end(form) }}
    </div>
</div>
