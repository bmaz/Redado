{% extends "RedadoCoreBundle::layout.html.twig" %}

{% set user_name_link = "<a href=\"#{ path('user_show', { 'id': user.id }) }\">#{ user.name }</a>" %}

{% block left_content %}
    {{ form_start(edit_form) }}
        <div class="form-group">
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.first_name) }}
        {{ form_row(edit_form.last_name) }}
        {{ form_row(edit_form.email) }}
        </div>
        <p>
            <button type="submit" class="btn btn-primary">
                {% trans %}
                    Save
                {% endtrans %}
            </button>
        </p>
        <a href="{{ path('fos_user_change_password') }}">
            {{ 'Change my password' | trans }}
        </a>
        {{ form_end(edit_form) }}
{% endblock %}
