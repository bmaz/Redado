{% extends "RedadoCoreBundle::layout.html.twig" %}

{% set user_name_link = "<a href=\"#{ path('user_show', { 'id': user.id }) }\">#{ user.name }</a>" %}

{% block h1 %}
{% trans %}Edit %user_name_link%{% endtrans %}
{% endblock %}

{% block content %}
    <form action="{{ path('user_update', { 'id': user.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn">
                {% trans %}
                    Save
                {% endtrans %}
            </button>
            {% include 'RedadoCoreBundle:User:deleteModal.html.twig' with { 'form' : delete_form, 'user' : user } %}
        </p>

    </form>
{% endblock %}
