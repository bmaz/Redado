{% extends "RedadoCoreBundle::layout.html.twig" %}

{% set user_name_link = "<a href=\"#{ path('user_show', { 'id': user.id }) }\">#{ user.name }</a>" %}

{% block h1 %}
    {% trans %}Delete %user_name_link% ?{% endtrans %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <p>
            {% set user_name = user.name %}
            {% trans %}
                Do you really want to delete %user_name% account ?
            {% endtrans %}
            <br />
        </p>
        <input type="submit" value="{% trans %}Delete{% endtrans %}" class="btn btn-danger" />
        {% trans %}or{% endtrans %}

        <a href="{{ path('user_show', { 'id' : user.id }) }}">
            {% trans %}
                Go back to user profile
            {% endtrans %}
        </a>
    {{ form_end(form) }}
{% endblock %}
