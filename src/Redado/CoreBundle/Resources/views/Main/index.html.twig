{% extends "RedadoCoreBundle::layout.html.twig" %}

{% block h1 %}
    {% set app_user_name = app.user.name %}
    {% trans %}Welcome %app_user_name% !{% endtrans %}
{% endblock %}

{% block headinfo %}
    {% trans %}Here you wil find the list of all the groups you belong to. You can click on them to get on there pages{% endtrans %}
{% endblock %}

{% block content %}
<div class="row-fluid">
    {% for group in user.groups %}
        <div class="span3">
            <a href="{{ path('group_show', { id: group.id }) }}">{{ group.name }}</a></br>
            {{ group.users|length }}
        </div>
    {% endfor %}
</div>
{% endblock %}
