{% extends "::base.html.twig" %}

{% block title %}
{{ app.user }} - Redado
{% endblock %}

{% block navbar %}
	<nav class="navbar navbar-inverse navbar-static-top">
	  <div class="navbar-inner">
            <div class="container">
		<ul class="nav">
			<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="{{ path('me') }}" data-target="#">{{ app.user }} <b class="caret"></b></a>
			  <ul class="dropdown-menu" role="menu">
			    <li role="menuitem"><a href="{{ path('me') }}">{% trans %}Home{% endtrans %}</a></li>
                <li role="menuitem"><a href="{{ path('user_edit', {'id': app.user.id}) }}">{% trans %}My account{% endtrans %}</a></li>
			    <li role="menuitem"><a href="{{ path('logout') }}">{% trans %}Logout{% endtrans %}</a></li>
			  </ul>
			</li>
		</ul>
		<form class="navbar-search pull-right" action="#">
		    <input class="search-query" type="text" placeholder="{% trans %}Search{% endtrans %}" />
		</form>
            </div>
          </div>
        </nav>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row-fluid" style="margin-top:15px;">
        <div class="span3">
            {% block left_column %}
            {% endblock %}
        </div>
        <div class="span9">
            {% for error in app.session.flashbag.get('error') %}
                <div class="row-fluid">
                    <div class="alert alert-error">
                    <strong>{% trans %}Error : {% endtrans %}</strong>
                        {{ error }}
                    </div>
                </div>
            {% endfor %}
            {% for message in app.session.flashbag.get('message') %}
                <div class="row-fluid">
                    <div class="alert alert-info">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            {% block content %}
                <div class="row-fluid">
                    <div class="span6">
                        {% block left_content %}
                        {% endblock %}
                    </div>
                    <div class="span6">
                        {% block right_content %}
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>

    <div class="row-fluid" style="margin-top:10px;">
        <div class="span12 well">
        <div class="span6">
            <p class="text-error">
                This is a development version. You are not supposed to be here.
            </p>
        </div>
        <div class="span6 text-right">
            <strong>{% trans %}Redado is a free software :{% endtrans %}</strong><br />
            <a href="http://www.gnu.org/licenses/agpl.html">
                <img src="http://www.gnu.org/graphics/agplv3-88x31.png"
                class="pull-right" alt="AGPL_logo" style="margin-left:10px;"/>
            </a>
            <p>
                <a href="http://www.gnu.org/licenses/agpl.html">{% trans %}License{% endtrans %}</a>
                <br />
                <a href="http://launchpad.net/redado">{% trans %}Code{% endtrans %}</a>
            </p>
        </div>
        </div>
    </div>

</div>
{% endblock %}


